n3 :
peso=float(input("introduce tu peso :"))
altura=float(input("introduce tu altura :"))
nombre=input("nombre :")
imc=(peso/((altura)**2))
print("señor" , nombre, "su imc es " , imc)
n4:
nombre=input("nombre :")
cantidad=float(input("Cuanto va a invertir :"))

interes=float(input("Porcentaje de interes :"))
dato=interes/100
años=float(input("A cuantos años :"))
capital=cantidad*dato*años
print("señor" , nombre, "su capital es " , capital)
